            'texte': 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eaque sint odio reiciendis inventore natus fugiat.'
        } %}

        {% include "shared/_assurance.html.twig" with {
            'color': 'warning',
            'icone': 'fas fa-lock',
            'texte': 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eaque sint odio reiciendis inventore natus fugiat.'
